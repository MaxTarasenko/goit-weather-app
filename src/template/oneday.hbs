<div class="temperature-box">
    <i class="weather-picture-icon"></i>
    <p class="temperature-header">{{city}}, {{countryCode}}</p>
    <div class="degree-box">
        <p class="degree-title">{{temp}}&deg</p>
        <ul class="degree-list">
            <li class="degree-item degree-item--line">
                <p class="degree-first-subtitle">min</p>
                <p class="degree-second-subtitle">{{tempMin}} &deg</p>
            </li>
            <li class="degree-item">
                <p class="degree-first-subtitle">max</p>
                <p class="degree-second-subtitle">{{tempMax}} &deg</p>
            </li>
        </ul>
    </div>
</div>